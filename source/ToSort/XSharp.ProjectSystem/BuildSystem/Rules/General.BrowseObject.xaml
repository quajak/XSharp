<?xml version="1.0" encoding="utf-8"?>
<Rule Name="ConfigurationGeneralBrowseObject"
      DisplayName="General"
      PageTemplate="generic"
      Description="General"
      xmlns="http://schemas.microsoft.com/build/2009/properties">

    <Rule.DataSource>
        <DataSource Persistence="ProjectFile"
                    Label="Configuration"
                    HasConfigurationCondition="False" />
    </Rule.DataSource>
    <Rule.Categories>
        <Category Name="General"
                  DisplayName="General"
                  Description="General" />
    </Rule.Categories>

    <StringProperty Name="ProjectFile"
                    DisplayName="Project File"
                    ReadOnly="True">
        <StringProperty.DataSource>
            <DataSource Persistence="ProjectFile"
                        PersistedName="MSBuildProjectFile" />
        </StringProperty.DataSource>
    </StringProperty>

    <StringProperty Name="ProjectDirectory"
                    DisplayName="Project Directory"
                    ReadOnly="True">
        <StringProperty.DataSource>
            <DataSource Persistence="ProjectFile"
                        PersistedName="MSBuildProjectDirectory" />
        </StringProperty.DataSource>
    </StringProperty>

</Rule>
